<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/homePage"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ecf1de"
android:windowSoftInputMode="adjustNothing"
tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">
    <TextView
        android:id="@+id/SongsOfWorship"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#363436"
        android:fontFamily="cursive"
        android:gravity="center_vertical"
        android:text="Songs of Worship"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/SongsOfWorship"
        tools:layout_editor_absoluteX="80dp">



        <AutoCompleteTextView
            android:id="@+id/autofindsongs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".80"
            android:hint="Search by name or number: "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />




        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:backgroundTint="#363436"
            android:layout_margin="5dp"
            android:outlineAmbientShadowColor="#080808"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#363436"
                android:contentDescription="Search"
                android:onClick="onSearchClick"
                app:srcCompat="@android:drawable/ic_menu_search" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclersongsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="1dp" />



</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>