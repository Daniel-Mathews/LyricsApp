<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/songLyricsDisplayPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf1de"
    android:windowSoftInputMode="adjustNothing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/SongsOfWorship"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#363436"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Songs of Worship"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/lyricsPageLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/SongsOfWorship">

            <ImageButton
                android:id="@+id/lyricsPageHomeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="#363436"
                android:contentDescription="Back"
                android:onClick="backToHomeClick"
                app:srcCompat="@android:drawable/ic_menu_revert" />

            <TextView
                android:id="@+id/lyricsPageSongTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".80"
                android:background="#363436"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>



        <TextView
            android:id="@+id/lyricsPageSongNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/lyricsPageLinearLayout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@+id/lyricsPageSongNumber"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/lyricsPageSongLyrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                app:layout_constraintTop_toBottomOf="@+id/lyricsPageSongNumber" />
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>